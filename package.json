{
  "name": "parcel-react-kit",
  "description": "A template for starting a react web app with parcel as the bundler.",
  "version": "0.1.0",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "parcel ./src/index.html --port 3000",
    "build": "parcel build ./src/index.html",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write \"./**/*.{js,ts,json}\""
  },
  "keywords": [],
  "author": "Sakari Mursu <sakari@mursu.dev>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mskri/parcel-react-kit"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@hot-loader/react-dom": "^17.0.0",
    "autoprefixer": "^10.0.1",
    "husky": "^4.3.0",
    "parcel-bundler": "^1.12.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "react-hot-loader": "^4.13.0"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
